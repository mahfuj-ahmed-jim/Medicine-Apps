<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/home_card_frame_bg"
        android:background="@drawable/background_home_search">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/home_medicineName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:layout_marginHorizontal="14dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Montine 5 mg"
                        android:textColor="@color/lightModeSecondText_color"
                        android:textStyle="bold"
                        android:textSize="19dp">

                    </TextView>

                    <TextView
                        android:id="@+id/home_medicineCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="14dp"
                        android:text="Daily 3 times"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/lightModeSecondText_color"
                        android:textSize="14dp">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/home_meal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="After Meal"
                        android:textColor="@color/lightModeSecondText_color"
                        android:textSize="14dp"

                        android:layout_marginHorizontal="14dp">

                    </TextView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dinner">

                    </ImageView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">




                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="23dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:src="@drawable/ellipse_2">

                        </ImageView>
                        <TextView
                            android:id="@+id/home_time01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="29dp"
                            android:layout_marginTop="21dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="06 : 00 PM "
                            android:textColor="@color/lightModeSecondText_color"
                            android:textSize="14dp">

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28.5dp"
                        android:layout_marginTop="-10.5dp"
                        android:orientation="vertical">

                        <View
                            android:layout_width="1.5dp"
                            android:layout_height="29dp"
                            android:layout_marginTop="2.7dp"
                            android:background="#0F6E71" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="23dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_ellipse_3">

                        </ImageView>
                        <TextView
                            android:id="@+id/home_time02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-2dp"
                            android:layout_marginLeft="29dp"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/lightModeSecondText_color"
                            android:text="06 : 00 PM "
                            android:textSize="14dp">

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28.5dp"
                        android:layout_marginTop="-13dp"
                        android:orientation="vertical">

                        <View
                            android:layout_width="1.5dp"
                            android:layout_height="29dp"
                            android:layout_marginTop="2.7dp"
                            android:background="#0F6E71" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="23dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_ellipse_3">

                        </ImageView>
                        <TextView
                            android:id="@+id/home_time03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="06 : 00 PM "
                            android:layout_marginTop="-2dp"
                            android:layout_marginLeft="29dp"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="14dp"
                            android:textColor="@color/lightModeSecondText_color">

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28.5dp"
                        android:layout_marginTop="-13dp"
                        android:orientation="vertical">

                        <View
                            android:layout_width="1.5dp"
                            android:layout_height="29dp"
                            android:layout_marginTop="2.7dp"
                            android:background="#0F6E71" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="23dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_ellipse_3">

                        </ImageView>
                        <TextView
                            android:id="@+id/home_time04"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-2dp"
                            android:layout_marginLeft="29dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="06 : 00 PM "
                            android:textSize="14dp"
                            android:textColor="@color/lightModeSecondText_color">

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28.5dp"
                        android:layout_marginTop="-13dp"
                        android:orientation="vertical">

                        <View
                            android:layout_width="1.5dp"
                            android:layout_height="29dp"
                            android:layout_marginTop="2.7dp"
                            android:background="#0F6E71" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        android:layout_marginLeft="23dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_ellipse_3">

                        </ImageView>
                        <TextView
                            android:id="@+id/home_time05"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-2dp"
                            android:layout_marginLeft="29dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="06 : 00 PM "
                            android:textSize="14dp"
                            android:textColor="@color/lightModeSecondText_color">

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="14dp">

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/home_medicineType"
                        android:layout_gravity="center"
                        android:layout_marginLeft="100dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_tablet">

                    </ImageView>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>





    </FrameLayout>


</androidx.cardview.widget.CardView>